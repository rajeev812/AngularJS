@model WebApi2Angular.Models.QRCodeGen

    @{
        ViewBag.Title = "Index";
    }

<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/Demo.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<style>
.datepickerdemoBasicUsage {
